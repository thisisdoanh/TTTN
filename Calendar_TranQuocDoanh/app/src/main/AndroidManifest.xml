    package="com.example.noteapp_tranquocdoanh">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_note"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_note"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calendar_TranQuocDoanh">
        <activity android:name=".ChangePassActivity"></activity>
        <activity
            android:name=".DetailNoteActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".AddNoteActivity" />
